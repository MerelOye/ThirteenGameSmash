<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/felt6"

    >
<!--android: android:background="@drawable" ^ needs a drawable bacground! should be put into the relative layout-->


<TextView
    android:text="@string/app_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:id="@+id/GameName"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textSize="36sp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

<Button
    android:text="@string/single"
    android:textAlignment="center"
    android:layout_width="170dp"
    android:layout_height="50dp"
    android:layout_marginTop="42dp"
    android:id="@+id/singleButton"
    android:layout_below="@+id/GameName"
    android:layout_centerHorizontal="true"
    android:fontFamily="sans-serif-medium"
    android:textSize="18sp" />

<Button
    android:textAlignment="center"
    android:text="@string/multi"
    android:layout_width="170dp"
    android:layout_height="50dp"
    android:id="@+id/multibutton"
    android:layout_below="@+id/singleButton"
    android:layout_alignStart="@+id/singleButton"
    android:textSize="18sp" />


</RelativeLayout>